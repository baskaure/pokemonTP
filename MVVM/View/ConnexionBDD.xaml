<Page x:Class="pokemonTP.MVVM.View.ConnexionBDD"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ConnexionBDD">
    <Grid>
        <TextBlock Text="Entrez le lien de connexion à la base de données"
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"
                   FontSize="16"/>

        <TextBox x:Name="ConnexionStringTextBox" Width="300" Height="30"
                 HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,50"/>

        <Button Content="Se connecter"
                Width="200" Height="40"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Click="BtnValiderConnexion_Click"/>

    </Grid>
</Page>
